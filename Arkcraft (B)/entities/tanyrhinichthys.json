          "component_groups": [
            "minecraft:scooped_up"
          ]
        },
        "remove": {
          "component_groups": [
          ]
        }
      },
      "minecraft:entity_spawned": {
        "randomize": [
          {
            "weight": 30,
            "add": {
              "component_groups": [ "adult", "scale_small" ]
