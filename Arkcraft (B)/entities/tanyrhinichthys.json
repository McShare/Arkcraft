              "play_sounds": "milk",
              "interact_text": "Charcoal"
            }
          ]
        },
        "minecraft:loot": {
          "table": "loot_tables/entities/tanyrhinichthys.json"
        },
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? Math.Random(1,3) : 0"
