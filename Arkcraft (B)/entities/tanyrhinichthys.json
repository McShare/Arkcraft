            "interact_text": "action.interact.scoop",
            "transform_to_item": "arkcraft:bucket_tany",
            "on_interact": {
              "filters": {
                "all_of": [
                  { "test": "has_equipment", "subject": "other", "domain": "hand", "value": "bucket:8"},
                  { "test" :  "is_family", "subject" : "other", "value" :  "player"}
                ]
              },
              "event": "minecraft:on_scoop",
              "target": "self"
            }
          },
            {
              "on_interact": {
                "filters": {
                  "all_of": [
                    { "test": "is_family", "subject" : "other", "value" :  "player"},
