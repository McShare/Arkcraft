{
  "format_version": "1.13.0",
  "minecraft:entity": {
    "description": {
      "identifier": "arkcraft:trilobite",

      "is_spawnable": true,
      "is_summonable": false,
      "is_experimental": false
    },

    "component_groups": {
      "minecraft:scooped_up": {
        "minecraft:instant_despawn": {
          "remove_child_entities": false
        }
      },
        "minecraft:textura_1":{
        "minecraft:variant": {
          "value": 0
      }
        },
        "minecraft:textura_2":{
        "minecraft:variant": {
          "value": 1
      }
        },
      "minecraft:trilobite": {
        "minecraft:type_family": {
          "family": [ "trilobite", "mob", "pig" , "cod" ]
        },
        "minecraft:collision_box": {
          "width": 0.5,
          "height": 0.3
        },
        "minecraft:underwater_movement": {
          "value": 0.1
        },
        "minecraft:scale": {
          "value": 1.0
        },
        "minecraft:behavior.move_to_water": {
          "priority": 1,
          "search_range": 105,
          "search_height": 5,
          "goal_radius": 0.1
        },
        "minecraft:experience_reward": {
          "on_bred": "Math.Random(1,7)",
          "on_death": "query.last_hit_by_player ? Math.Random(1,4) : 0"
        },
        "minecraft:loot": {
          "table": "loot_tables/entities/trilobite.json"
        },
        "minecraft:behavior.move_to_land": {
          "priority": 6,
          "search_range": 16,
          "search_height": 5,
          "goal_radius": 0.5
        },
        "minecraft:behavior.random_stroll": {
          "priority": 9,
          "interval": 100
        }
    }
    },

    "components": {
"minecraft:interact": {
          "interactions": [
    
          {
            "cooldown": 1,
            "use_item": true,
            "hurt_item": 1,
            "play_sounds": "bucket.fill.water",
            "interact_text": "action.interact.scoop",
            "transform_to_item": "arkcraft:bucket_trilobite",
            "on_interact": {
              "filters": {
                "all_of": [
                  { "test": "has_equipment", "subject": "other", "domain": "hand", "value": "bucket:8"},
                  { "test" :  "is_family", "subject" : "other", "value" :  "player"}
                ]
              },
              "event": "minecraft:on_scoop",
              "target": "self"
            }
          }
              ]
        },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0,
        "breathes_water": true,
        "breathes_air": true,
        "generates_bubbles": false
      },
      "minecraft:nameable": {
      },
      "minecraft:health": {
        "value": 5
      },
      "minecraft:jump.static": {
      },
      "minecraft:can_climb": {
      },
      "minecraft:damage_sensor": {
        "triggers": {
          "cause": "lightning",
          "deals_damage": true,
          "damage_multiplier": 2000.0
        }
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:movement": {
        "value": 0.1
      },
      "minecraft:water_movement": {
        "drag_factor": 0.1
      },
      "minecraft:navigation.generic": {
        "is_amphibious": true,
        "can_path_over_water": false,
        "can_swim": true,
        "can_walk": true,
        "can_sink": false,
        "avoid_damage_blocks": true
      },
      "minecraft:movement.amphibious": {
        "max_turn": 1.0
      },
      "minecraft:physics": {
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:follow_range": {
        "value": 1024
      },

      "minecraft:behavior.panic": {
        "priority": 0,
        "prefer_water": true,
        "speed_multiplier": 1.0
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1
      },
      "minecraft:behavior.move_to_water": {
        "priority": 4,
        "search_range": 16,
        "search_height": 5,
        "search_count": 1,
        "goal_radius": 0.1
      },
      "minecraft:behavior.random_swim": {
        "priority": 7,
        "interval": 0,
        "xz_dist": 100,
        "y_dist": 150
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "randomize": [
          {
            "weight": 9,
            "add": {
              "component_groups": [
                "minecraft:trilobite",
"minecraft:textura_1"
              ]
            }
          },
          {
            "weight": 9,
            "add": {
              "component_groups": [
                "minecraft:trilobite",
"minecraft:textura_2"
              ]
            }
          }
        ]
      },
 
      "minecraft:on_scoop": {
        "add": {
          "component_groups": [
            "minecraft:scooped_up"
          ]
        },
        "remove": {
          "component_groups": [
          ]
        }
      }
    }
  }
}
